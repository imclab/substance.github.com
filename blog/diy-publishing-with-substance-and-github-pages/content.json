      "caption": "text_d7f95c3062bcbe77420bdb871c282527"
    },
    "figure_reference_5c433fa78dfd0e9b9197c4119b2348a9": {
      "type": "figure_reference",
      "id": "figure_reference_5c433fa78dfd0e9b9197c4119b2348a9",
      "path": [
        "f8d8694dee8236b4c52d24be2c78c0d1",
