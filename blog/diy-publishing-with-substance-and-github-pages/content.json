    "heading_30361c2b07cf2be01be30a60f8807b17": {
      "type": "heading",
      "id": "heading_30361c2b07cf2be01be30a60f8807b17",
      "source_id": "",
      "content": "Create a document",
      "level": 1
    },
    "f8d8694dee8236b4c52d24be2c78c0d1": {
      "type": "text",
      "id": "f8d8694dee8236b4c52d24be2c78c0d1",
      "source_id": "",
      "content": "You can use the current alpha version of the Substance Composer to create a document. It is very easy to get started."
    },
    "heading_1f20f22fca4356a4c1f78067a75c44fe": {
      "type": "heading",
      "id": "heading_1f20f22fca4356a4c1f78067a75c44fe",
      "source_id": "",
      "content": "Publish your document",
      "level": 1
    },
    "0c2cb6d776a476db92bcb244b519a531": {
      "type": "text",
      "id": "0c2cb6d776a476db92bcb244b519a531",
      "source_id": "",
      "content": "All you need is a Github account. Now click publish in the Composer interface and follow the instructions on the screen. That's it."
    },
    "text_d7f95c3062bcbe77420bdb871c282527": {
      "type": "text",
      "id": "text_d7f95c3062bcbe77420bdb871c282527",
      "source_id": "",
      "content": "The Substance Composer lets you store your Substance documents on disk using the Export feature in the Composer. You receive a .sdf.zip file named after the document's title."
    },
    "figure_41fe7709fd0c1c53e1c5db05fb871882": {
      "type": "figure",
      "id": "figure_41fe7709fd0c1c53e1c5db05fb871882",
